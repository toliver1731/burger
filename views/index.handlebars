
  <h2 class="uneaten-title">Current Burgers</h2>
  <ul class="uneaten">
    
    {{#each table}}
      {{#unless this.devoured}}
        <li>
        
          <p>
            {{this.burger_name}}
          </p>
          <form action="table/update/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="true">
            <button type="submit" class="btn btn-default" style="background-color:black; color:yellow; padding: 15px">Eat it!</button>
          </form>
        </li>
      {{/unless}}
    {{/each}}
  </ul>
  <!-- <img id="ghost" src="../img/ghost.png" width="150px"> -->
</div>

<div class="row">
  <div class="col-md-2"></div>
    <div class="col-md-4" id="update">
      <br><br><br>
        <form class="create-update-form" action="table/create" method="POST">
          <h2 class="add-title">Add a Burger</h2>
          <div class="form-group">
            <label for="newBurger">Burger Name:</label>
            <input type="hidden" name="devoured" value="0">
            <input type="text" id="newBurger" name="burger_name">
          <button type="submit" class="btn btn-default">Add Burger</button>
        </form>
      </div>
    </div>

    <div class="col-md-4" id="eaten">
      <br><br><br>
      <h2 class="eaten-title">Eaten Burgers</h2>
      <ul class="burgers-eaten">
        {{#each table}}
          {{#if this.devoured}}
            <li>
              <p>
                {{this.burger_name}}
              </p>
            </li>
            <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
             <input type="hidden" name="devoured" value="false">
          {{/if}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-2"></div>
</div>